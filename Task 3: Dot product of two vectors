using LinearAlgebra  # Import dot() function

# Ask for the size of the vectors
print("Enter size of the vectors: ")
n = parse(Int, readline())

# Generate two random integer vectors
v1 = rand(1:100, n)
v2 = rand(1:100, n)

# Calculate the dot product
dot_product = dot(v1, v2)

# Print the results
println("Vector 1: ", v1)
println("Vector 2: ", v2)
println("Dot Product: ", dot_product)

